<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body >
    <input id="toggle-main-nav" class="toggle-main-nav" type="checkbox" />
    <div class="wrapper">
        <div class="wrapper-inner">

            <div class="header classic">
                <div class="logo-bar">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4 col-xs-9">
                                <div class="logo">
                                    <a title="Buy / Sell Car online" href="/"><img src="~/Content/Images/logo.png" alt="Buy / Sell Car online | CarDealer WordPress Theme"></a>
                                </div>
                            </div>
                        </div><!--/ .row-->
                    </div><!--/ .container-->

                </div><!--/ .logo-bar-->

                <div class="space" style="height: auto;"></div><div id="navHolder" class="">

                    <div class="nav-bar sticky-bar">

                        <div class="container">
                            <div class="row">
                                <div class="col-xs-12">

                                    <!-- Responsive Navigation -->
                                    <label for="toggle-main-nav" class="label-toggle-main-nav">
                                        <div class="menu-icon-container">
                                            <div class="menu-icon">
                                                <div class="menu-global menu-top"></div>
                                                <div class="menu-global menu-middle"></div>
                                                <div class="menu-global menu-bottom"></div>
                                            </div>
                                        </div>
                                    </label>


                                    @Html.Partial("_LoginPartial")
                                </div>
                            </div><!--/ .row-->
                        </div><!--/ .container-->

                    </div><!--/ .nav-bar-->

                </div><!--/ #navHolder-->

            </div>
            <div class="container body-content">
                @RenderBody()
                <hr />
            </div>

            <footer id="footer">

                <div class="container">

                    <div class="row">
                        <div class="col-xs-12 adjective">
                            <p class="alignleft">Copyright © @DateTime.Now.Year. All rights reserved</p>
                        </div>
                    </div><!--/ .row-->

                </div><!--/ .container-->

            </footer>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)


        </div><!-- / .wrapper-inner -->
    </div><!-- / .wrapper -->
</body>
</html>
